<%# e.g. [["service_control_manager", 195874], ["url", 196563], ["unknown", 711], ["windows", 1]] %>
<%# field_count = Hash[*chart_results.flatten].sort {|v2,v1| v1[1].to_i <=> v2[1].to_i }%>
<table id="<%=chart_div_name%>" class="table table-striped table-bordered" cellpadding="0" cellspacing="0" border="0">
  <thead>
    <th><%= source_name + '.' + source_field %></th>
    <th>count</th>
  </thead>
  <tbody>
		<%# field_count.each_with_index do |result, x| %>
		<% chart_results.each do |result| %>
				<tr>
					<td><%= result.value %></td>
					<td style="text-align:right"><%= number_with_delimiter(result.hits) %></td>
				</tr>
		<% end %>
  </tbody>
</table>
<script type='text/javascript'>
jQuery(document).ready(function() {
	$('#<%=chart_div_name%>').dataTable({
		"bPaginate": false,
		"bLengthChange": false,
		"bFilter": false,
		"bSort": false,
		"bInfo": false,
		"bAutoWidth": false
	});
});
</script>
