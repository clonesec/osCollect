<% if @error_message %>
	<div class="alert alert-error">
		<h3><%= @error_message%></h3>
	</div>
<% else %>
	<% div_id = "total-logs-by-host-this-week" %>
	<div id="total-logs-by-host-this-week">
		<h3>
			Total Logs:&nbsp;&nbsp;
			<small>
				(
					total of 
					<%=number_with_delimiter(@date_total)%> logs in the past 
					<%=number_with_delimiter(@date_counts.length)%> days
				)
			</small>
		</h3>
		<% if @date_counts.length <= 0 %>
        <blockquote>
          <p style="font-size:20px">
            No data to display
          </p>
        </blockquote>
		<% else %>
				<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="facet_date_table">
				  <thead>
				    <th>date</th>
				    <th>count</th>
				  </thead>
				  <tbody>
						<% @date_counts.each do |dc| %>
							<tr>
								<td><%= dc.value %></td>
								<td style="text-align:right"><%= number_with_delimiter(dc.hits) %></td>
							</tr>
						<% end %>
				  </tbody>
				</table>
		<% end %>
	</div>
<% end %>
